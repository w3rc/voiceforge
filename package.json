{
  "name": "voiceforge",
  "version": "1.0.0",
  "description": "A powerful, modern desktop application for real-time speech-to-text transcription using OpenAI Whisper API. Transform your voice into text with professional accuracy and style.",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build": "npm run build-renderer && npm run build-main",
    "build-renderer": "webpack --mode production",
    "build-main": "webpack --config webpack.main.config.js --mode production",
    "dev": "concurrently \"npm run dev-renderer\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "dev-renderer": "webpack serve --mode development",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mwl"
  },
  "keywords": [
    "voiceforge",
    "speech-to-text",
    "transcription",
    "whisper",
    "openai",
    "desktop-app",
    "electron",
    "voice-recognition",
    "ai-powered"
  ],
  "author": {
    "name": "VoiceForge Contributors",
    "email": "contributors@voiceforge.app"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.2",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^4.24.0",
    "wav": "^1.0.2"
  },
  "build": {
    "appId": "com.voiceforge.app",
    "productName": "VoiceForge",
    "copyright": "Copyright Â© 2025 VoiceForge Contributors",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/",
      "renderer/",
      "node_modules/",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "VoiceForge Contributors"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "AudioVideo"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VoiceForge"
    },
    "dmg": {
      "title": "VoiceForge ${version}",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "w3rc",
      "repo": "voiceforge"
    }
  }
}